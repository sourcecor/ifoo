<div class="nested-fields ui fields">

  <i class="sort icon" style="margin: 10px 0px; cursor: move;"></i>

  <div class="ui four wide field">
  <%= f.input :caption, wrapper: :input_labeled, label: "標題", placeholder: "標題" %> <!-- spec的name欄位 -->
  </div>
  <div class="ui four wide field">
  <%= f.input :caption_s, wrapper: :input_labeled, label: "標題(簡)", placeholder: "標題(簡)" %> <!-- spec的name欄位 -->
  </div>
  <div class="ui four wide field">
  <%= f.input :caption_e, wrapper: :input_labeled, label: "標題(英)", placeholder: "標題(英)" %> <!-- spec的name欄位 -->
  </div>

  <%= f.hidden_field :seq %> <!-- spec的detail欄位 -->
  <%= link_to_remove_association "移除", f, { data: {confirm: '要刪除嗎?'}, class: 'ui red button', style: "height: 36px" } %>




</div>
