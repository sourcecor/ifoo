<div class="nested-fields ui nine fields" style="padding:5px 0px;">
  <i class="sort icon" style="margin: 10px 0px; cursor: move;"></i>
  <div class="ui four column grid container">
    <div class ="row">
      <%= f.hidden_field :seq %> <!-- spec的detail欄位 -->
      <div class="column">
      <%= f.input :color, wrapper: :input_labeled, label: "顏色", placeholder: "顏色 紅/藍/綠" %>
      </div><!-- spec的detail欄位 -->
      <div class="column">
      <%= f.input :size, wrapper: :input_labeled, label: "尺碼", placeholder: "尺碼 S/M/L" %>
      </div><!-- spec的name欄位 -->
      <div class="column">
      <%= f.input :color_s, wrapper: :input_labeled, label: "色(簡)", placeholder: "顏色 紅/藍/綠" %>
      </div><!-- spec的detail欄位 -->
      <div class="column">
      <%= f.input :size_s, wrapper: :input_labeled, label: "碼(簡)", placeholder: "尺碼 S/M/L" %>
      </div><!-- spec的name欄位 -->


      <div class="column">
      <%= f.input :color_e, wrapper: :input_labeled, label: "色(英)", placeholder: "color red/blue/green" %>
      </div><!-- spec的detail欄位 -->

      <div class="column">
      <%= f.input :size_e, wrapper: :input_labeled, label: "碼(英)", placeholder: "Size S/M/L" %>
      </div><!-- spec的name欄位 -->
      <div class="column">
      <%= f.input :qty, wrapper: :input_labeled, label: "數量", placeholder: "數量" %>
      </div>
      <div class="column">
      <%= f.input :itemcode, wrapper: :input_labeled, label: "貨號", placeholder: "商店貨號" %>
      </div>

      <div class="column">

        <%= link_to_remove_association "移除", f, { data: {confirm: '要刪除嗎?'}, class: 'ui red button', style: "height: 36px" } %>
      </div>

    </div>
  </div>
</div>
